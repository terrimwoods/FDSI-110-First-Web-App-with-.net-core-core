@{
    ViewData["Title"]= "Register Property";
}


<form>
   
<h2 style="color: teal;">Register</h2>
   
  <div class="form-group">
    <label for="exampleFormControlInput1">Name</label>
    <input type="text" class="form-control" id="name" placeholder="name">
  </div>

  <div class="form-group">
    <label for="exampleFormControlSelect1">Rooms</label>
    <select class="form-control" type= "number" id="rooms">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>

  <div class="form-group">
    <label for="exampleFormControlSelect2">Bathroom</label>
    <select class="form-control" id="bathroom">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>

   <div class="form-group">
    <label for="exampleFormControlTextarea1">Price</label>
    <input type="number" class="form-control" id="price" placeholder="price">
  
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Square Feet</label>
    <input type="number" class="form-control" id="SqrFeet" placeholder="square feet">
  
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Image name:</label>
    <textarea class="form-control" id="image" rows="1"></textarea>
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea class="form-control" id="description" type=" text" rows="3"></textarea>
  </div>

  <div class="form-group row">
      <div >
      <button type="button" id="btnSave" class="btn btn-info">Register</button>
      </div>
  </div>
</form>

@section Scripts {
    <script src="/js/register.js"></script>
}